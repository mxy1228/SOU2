<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ListView 
        android:id="@+id/suggestion_lv"
        android:layout_width="match_parent"
        android:layout_height="0.0dip"
        android:scrollbars="none"
        android:layout_weight="1.0"></ListView>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/suggesttion_bottom_height"
        android:layout_gravity="bottom"
        android:padding="5.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        
        <EditText 
            android:id="@+id/suggestion_et"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:maxLines="3"
            android:layout_weight="1.0"/>
        
        <Button 
            android:id="@+id/suggestion_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_xbg"
            android:layout_marginLeft="5.0dip"
            android:text="@string/submmit"/>
        
    </LinearLayout>
    
</LinearLayout>
