<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MyTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarSize">@dimen/actionbar_height</item>
        <item name="android:selectableItemBackground">@drawable/actionbar_click_xbg</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarItemBackground">@drawable/actionbar_click_xbg</item>
        
    </style>
    
    <style name="MyNormalTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyNormalActionBar</item>
        <item name="android:actionBarSize">@dimen/actionbar_height</item>
        <item name="android:selectableItemBackground">@drawable/actionbar_click_xbg</item>
        <item name="actionBarStyle">@style/MyNormalActionBar</item>
        <item name="actionBarItemBackground">@drawable/actionbar_click_xbg</item>
    </style>
    
    <style name="MyActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_click_xbg</item>
        <item name="background">@drawable/actionbar_click_xbg</item>
    </style>
    
    <style name="MyNormalActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#0a507e</item>
        <item name="background">#0a507e</item>
    </style>
    
    <style name="btn">
        <item name="android:background">@drawable/btn_xbg</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="menu_btn" parent="@style/btn">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
